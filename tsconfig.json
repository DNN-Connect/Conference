{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "js/src"
  },
  "include": ["js/src/**/*.ts", "js/src/**/*.tsx"],
  "exclude": ["build", "node_modules", "_Development"]
}
