@inherits Connect.DNN.Modules.Conference.Common.ConferenceWebPage<Connect.Conference.Core.Models.Conferences.ConferenceBase>
@using DotNetNuke.Web.Mvc.Helpers

<fieldset>
 <div class="dnnFormItem">
  <div class="dnnLabel" style="position: relative;">
   <label>@Dnn.LocalizeString("Name")</label>
  </div>
  @Html.TextBoxFor(m => m.Name, new { size = "100" })
 </div>
 <div class="dnnFormItem">
  <div class="dnnLabel" style="position: relative;">
   <label>@Dnn.LocalizeString("Description")</label>
  </div>
  @Html.TextAreaFor(m => m.Description, new { cols = 35, @rows = 3 })
 </div>
 <div class="dnnFormItem">
  <div class="dnnLabel" style="position: relative;">
   <label>@Dnn.LocalizeString("StartDate")</label>
  </div>
  @Html.EditorFor(m => m.StartDate)
 </div>
 <div class="dnnFormItem">
  <div class="dnnLabel" style="position: relative;">
   <label>@Dnn.LocalizeString("EndDate")</label>
  </div>
  @Html.TextBoxFor(m => m.EndDate, new { type = "date" })
 </div>
 <div class="dnnFormItem">
  <div class="dnnLabel" style="position: relative;">
   <label>@Dnn.LocalizeString("MaxCapacity")</label>
  </div>
  @Html.TextBoxFor(m => m.MaxCapacity)
 </div>
 <div class="dnnFormItem">
  <div class="dnnLabel" style="position: relative;">
   <label>@Dnn.LocalizeString("SessionVoting")</label>
  </div>
  @Html.CheckBoxFor(m => m.SessionVoting)
 </div>
 <div class="buttons">
  <button type="submit" class="btn btn-default">@Dnn.LocalizeString("Save")</button>
 </div>
</fieldset>
